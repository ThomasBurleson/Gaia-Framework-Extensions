		/**	 * This class provides base functionality to quickly create Slide shows with GAIA.	 * GAIA will provide the loading mechanisms, caching, preloader, and slide transitions, and context menu	 * for global navigations. This makes it VERY easy to create complex slides with LARGE content and complex internal interactions.	 * 	 *      Each slide is responsible for the animations used within itself; during the transitionIn, idle, and transitionOut phases.	 *      Each slides is INDEPENDENT of the other slides.	 *      Developers may create slide content of ANY complexity... 	 */	 	 	dynamic public class SlidePage extends SlideBase	{			// ********************************************************************		//  Constructor		// ********************************************************************				public function SlidePage() {			super();					}				// ********************************************************************		//  GAIAI Methods to support page/slide transitions		// ********************************************************************				/**		 * GAIA is requesting that this slide perform a transitionIn (immediate or animated)		 * and respond with notification when the transition is finished.		 */		override public function transitionIn():void  {			super.transitionIn();   // Dispatches the "transitionIn" started event		}				/**		 * GAIA is requesting that this slide perform a transitionOut (immediate or animated)		 * and respond with notification when the transition is finished.		 */		override public function transitionOut():void {				        super.transitionOut();   // Dispatches the "transitionOut" started event	    }	}		}